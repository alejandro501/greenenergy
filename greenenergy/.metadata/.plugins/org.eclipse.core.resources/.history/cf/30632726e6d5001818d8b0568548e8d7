package com.greenergy.controller;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class HomeController {
	
	/* The HomeController class index method rules all the mapping of particular URLs
	 * so what's happening/being displayed when clicking the URL
	 * Static files can be displayed from the static folder BUT the controller always overrules them
	 * */
	@RequestMapping("/")
	public String index() {
		return "Alex, nice to see you.";
	}
}
